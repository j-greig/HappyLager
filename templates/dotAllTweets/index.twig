<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
<head>
	{% block head %}
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta charset="utf-8">
		<title>{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

			<link rel="stylesheet" href="assets/css/_tachyons.min.css">
			<link rel="stylesheet" href="assets/css/extras.css">
	{% endblock %}
</head>
<body class="w-100 h-100 ma3 pa0">
{% set dotAllTweets = craft.entries({
  section: 'dotAllTweets',
  orderBy: 'postDate desc'
}).all() %}

<section id="dot-all-tweets" class="sans-serif clearfloat">
  {% for entry in dotAllTweets %}
  <div class="bg-white ma3 pa3 br3 fl mw5_5">
    <p class="mt0 lh-copy"><strong>{{ entry.tweetFullName }}</strong>&nbsp; <small class="gray">@{{ entry.tweetUsername }}</small></p>
    <p class="lh-copy ">{{ entry.tweetText }}</p>
    <p class="mb0 f7"><a class="gray link" href="{{ entry.tweetUrl }}">{{ entry.postDate.getTimestamp()|timeAgo }}</a></p>
  </div>
  {% endfor %}
</section>
</body>
