<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
<head>
	{% block head %}
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta charset="utf-8">
		<meta http-equiv="refresh" content="15">
		<title>{% if title is defined %}{{ title }} - {% endif %}{{ siteName }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" href="/assets/css/_tachyons.min.css">
		<link rel="stylesheet" href="/assets/css/extras.css">
	{% endblock %}
</head>
<body class="w-100 h-100 pa0">
{% set dotAllTweets = craft.entries({
  section: 'dotAllTweets',
  orderBy: 'postDate desc'
}).all() %}

<section id="dot-all-tweets" class="ma3 sans-serif grid">
  {% for entry in dotAllTweets %}
  <div class="grid-item bg-white ma3 pa3 br3 fl">
    <p class="mv0 lh-copy f3"><strong>{{ entry.tweetFullName }}</strong><small class="gray">&nbsp; @{{ entry.tweetUsername }}</small></p>
    <p class="mt2 mb0 lh-copy f3">{{ entry.tweetText }}</p>
    <p class="mb0 f5"><a class="gray link" href="{{ entry.tweetUrl }}">{{ entry.postDate.getTimestamp()|timeAgo }}</a></p>
  </div>
  {% endfor %}
</section>

<script type="text/javascript" src="/assets/js/masonry.pkgd.min.js"></script>
<script>
// self executing function here
(function() {
	var elem = document.querySelector('.grid');
	var msnry = new Masonry( elem, {
	  // options
	  itemSelector: '.grid-item',
	  columnWidth: 440
	});

	// element argument can be a selector string
	//   for an individual element
	var msnry = new Masonry( '.grid', {
	  // options
});
})();
</script>
</body>
